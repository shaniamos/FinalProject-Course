<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/main_top_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/main_page_logo"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/app_logo" />

        <TextView
            android:id="@+id/hello_sentence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_page_logo"
            android:layout_centerHorizontal="true"
            android:paddingBottom="10dp"
            android:text="We're here to answer your questions"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:textColor="@color/black"/>


    </RelativeLayout>

    <com.mindorks.placeholderview.ExpandablePlaceHolderView
        android:id="@+id/expandble_list_view"
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:layout_below="@id/main_top_questions"
        android:scrollbars="vertical" />





</RelativeLayout>