<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/carView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    cardView:cardCornerRadius="20dp"
    cardView:cardElevation="40dp"
    android:layout_marginTop="40dp"
    android:layout_marginStart="50dp"
    android:layout_marginEnd="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/procedure_image"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_margin="10dp"
            cardView:layout_constraintBottom_toTopOf="@id/procedure_text"
            cardView:layout_constraintEnd_toEndOf="parent"
            cardView:layout_constraintHorizontal_bias="0.483"
            cardView:layout_constraintStart_toStartOf="parent"
            cardView:layout_constraintTop_toTopOf="parent"
            cardView:srcCompat="@drawable/letter" />

        <TextView
            android:id="@+id/procedure_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Procedure Name"
            android:textSize="20sp"
            android:textStyle="bold"
            cardView:layout_constraintEnd_toEndOf="@+id/procedure_image"
            cardView:layout_constraintStart_toStartOf="@id/procedure_image"
            cardView:layout_constraintTop_toBottomOf="@+id/procedure_image" />

        <TextView
            android:id="@+id/procedure_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Procedure Description"
            android:textAlignment="center"
            android:textSize="15sp"
            cardView:layout_constraintEnd_toEndOf="@+id/procedure_text"
            cardView:layout_constraintStart_toStartOf="@+id/procedure_text"
            cardView:layout_constraintTop_toBottomOf="@+id/procedure_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

